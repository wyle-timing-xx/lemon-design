{
  "name": "@lemon-design-xx/core",
  "version": "1.0.5",
  "description": "Modern React component library built with TailwindCSS",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./dist/index.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lemon-design-xx/lemon-design.git"
  },
  "homepage": "https://github.com/lemon-design-xx/lemon-design#readme",
  "bugs": {
    "url": "https://github.com/lemon-design-xx/lemon-design/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:main": "rollup -c --config-rollup.main.js",
    "build:dts": "rollup -c --config-rollup.dts.js",
    "build": "pnpm run build:main && pnpm run build:dts",
    "dev": "rollup -c -w --config-rollup.main.js --no-watch",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "4.1.14",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react",
    "components",
    "tailwind",
    "design-system"
  ],
  "author": "Lemon Design Team",
  "license": "MIT"
}
