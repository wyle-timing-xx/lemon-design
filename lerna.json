{
  "version": "1.1.0",
  "npmClient": "pnpm",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "npm-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}